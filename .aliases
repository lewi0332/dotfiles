csv_preview(){
    local max_rows=1000
    local file_size=$(wc -l < "$1" 2>/dev/null || echo "unknown")

    if [ "$file_size" -gt 10000 ]; then
        echo "Large CSV here ($file_size rows), limiting to $max_rows"
        visidata --max-rows "$max_rows" "$1"
    else
        visidata "$1"
    fi
}

alias -s csv=csv_preview
